
{
  "name": "fact_checking_api",
  "version": "1.0.0.",
  "description": "Fact checking API",
  "author": "Rastislav Kopal",
  "main": "src/index.js",
  "private": false,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=16.1.13",
    "yarn": "*"
  },
  "scripts": {
    "install:all": "for i in */; do yarn --cwd \"${i}\"; done",
    "postinstall": "patch-package",
    "prestart": "yarn docs",
    "start": "cross-env NODE_ENV=production pm2 start ./users_service/src/index.js",
    "dev": "nodemon ./users_service/src/index.js",
    "lint": "eslint ./users_service/src/ --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "yarn lint --fix",
    "lint:watch": "yarn lint --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --exit --recursive users_service/src/api/tests",
    "test:unit": "cross-env NODE_ENV=test mocha users_service/src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 --exitusers_service/src/api/tests/integration",
    "test:watch": "cross-env NODE_ENV=test mocha --watch users_service/src/api/tests/unit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "validate": "yarn lint && yarn test",
    "postpublish": "git push --tags",
    "deploy": "sh ./deploy.sh",
    "docs": "apidoc -i users_service/src -o docs",
    "postdocs": "open-cli docs/index.html",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./users_service/src/index.js",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "dependencies": {
    "pm2": "^5.1.0",
    "cross-env": "^7.0.3"
  },
  "devDependencies": {
    "postinstall-postinstall": "^2.1.0",
    "patch-package": "^6.5.0",
    "apidoc": "^0.28.1",
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.0",
    "husky": "^3.0.7",
    "mocha": "^6.2.2",
    "nodemon": "^2.0.1",
    "nyc": "^15.1.0",
    "opn-cli": "^5.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.0.0",
    "supertest": "^6.1.3"
  }
}